{
    "manifest_version": 3,
    "name": "Enlarge Instagram Picture",
    "description": "Opens Instagram picture enlarged on a new tab",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}