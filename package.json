{
  "name": "instagram-pic-enlarger",
  "version": "1.0.0",
  "description": "Opens profile's enlarged picture from the current tab to a new tab",
  "engineStrict": false,
  "engines": {
    "node": ">=22"
  },
  "packageManager": "yarn@4.12.0",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "playwright:setup": "yarn playwright install --with-deps chromium",
    "playwright:test": "yarn playwright test --config=playwright/playwright.config.ts",
    "test": "yarn jest --config=tests/jest.config.ts",
    "prettier": "prettier --check '**/*.{js,jsx,ts,tsx,css,html}'",
    "prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,css,html}'",
    "lint": "yarn oxlint --type-aware"
  },
  "npmMinimumReleaseAge": 60,
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.31",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "copy-webpack-plugin": "^13.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "oxlint": "^1.30.0",
    "oxlint-tsgolint": "^0.8.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
