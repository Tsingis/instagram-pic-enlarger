{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Helsinki",
  "schedule": ["* 21-22 * * 3"],
  "rebaseWhen": "conflicted",
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchDepTypes": ["packageManager"],
      "enabled": true
    },
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "enabled": false
    }
  ]
}